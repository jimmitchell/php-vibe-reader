# Application Configuration
APP_NAME=VibeReader
APP_ENV=production
APP_DEBUG=0
APP_URL=http://localhost

# Database Configuration
DB_TYPE=sqlite
DB_HOST=localhost
DB_PORT=5432
DB_NAME=vibereader
DB_USER=vibereader
DB_PASSWORD=vibereader
DB_PATH=data/rss_reader.db

# Session Configuration
SESSION_LIFETIME=7200
SESSION_REGENERATE_INTERVAL=1800

# CSRF Configuration
CSRF_TOKEN_EXPIRES=3600

# Feed Fetching Configuration
FEED_FETCH_TIMEOUT=30
FEED_FETCH_CONNECT_TIMEOUT=10
FEED_MAX_REDIRECTS=10

# Upload Configuration
UPLOAD_MAX_SIZE=5242880

# Logging Configuration
LOG_CHANNEL=vibereader
LOG_LEVEL=info
LOG_PATH=logs/app.log
LOG_MAX_FILES=7

# Rate Limiting Configuration
RATE_LIMITING_ENABLED=1
RATE_LIMIT_LOGIN_ATTEMPTS=5
RATE_LIMIT_LOGIN_WINDOW=900
RATE_LIMIT_API_REQUESTS=100
RATE_LIMIT_API_WINDOW=60

# Cache Configuration
CACHE_ENABLED=1
CACHE_DRIVER=file
CACHE_TTL=300
CACHE_PATH=data/cache

# Redis Configuration (optional, for CACHE_DRIVER=redis)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0
