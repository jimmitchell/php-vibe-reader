{
    "name": "php-vibe-reader/reader",
    "description": "A PHP-based RSS reading platform similar to Google Reader",
    "version": "1.1.1",
    "type": "project",
    "require": {
        "php": ">=8.0",
        "ext-pdo": "*",
        "ext-pdo_pgsql": "*",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-simplexml": "*",
        "ext-libxml": "*",
        "monolog/monolog": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "PhpRss\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PhpRss\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "setup": "php scripts/setup.php",
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage"
    }
}
